@model Transaction

<form method="post" asp-action="Edit">
    <input asp-for="Guid" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Transaction</h2>
            <hr />
        </div>
        <div class="mb-3 form-group">
            <label asp-for="Type" class="form-label">Transaction Type</label>
            @Html.DropDownListFor(m => m.Type, new SelectList(Enum.GetValues(typeof(TransactionType))),"-- Select Type --",  new { @class="form-control"})
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="mb-3 form-group">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="mb-3 form-group">
                    <label class="form-label">Amount</label>
                    <div class="input-group">
                        <span class="input-group-text">Kr.</span>
                        <input asp-for="Amount" type="text" class="form-control">
                        <span class="input-group-text">.00</span>
                    </div>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3 form-group">
                    <label class="form-label">Select Category</label>
                    @Html.DropDownListFor(model => model.CategoryId, ViewBag.Category as SelectList,"-- Select Category --", new { @class="form-control" })
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div align="right">
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Transaction" asp-action="Index" class="btn btn-secondary" style="width:150px">Cancel</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ 
        <partial name="_ValidationScriptsPartial"/>
    }
}
