@model IEnumerable<Transaction>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Transaction List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Transaction" asp-action="Create" class="btn btn-primary">New Transaction <i class="bi bi-plus"></i></a>

        </div>
    </div>
</div>
<br/>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col" width="20%">Guid</th>
            <th scope="col" width="20%">Type</th>
            <th scope="col" width="25%">Title</th>
            <th scope="col" width="25%">Amount</th>
            <th scope="col" width="10"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr class="align-middle @(obj.Type == TransactionType.Income ? "table-success" : "table-danger")">
                <th scope="row" width="20%">@obj.Guid</th>
                <th scope="row" width="20%">@obj.Type</th>
                <td width="25%">
                    @obj.Title
                </td>
                <td width="25%" >
                    @(obj.Type == TransactionType.Expense ? "-" : "")@obj.Amount DKK
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                    <a asp-controller="Transaction" asp-action="Edit" asp-route-id="@obj.Guid" class="btn btn-primary"> <i class="bi bi-pencil"></i></a>
                    <a asp-controller="Transaction" asp-action="Delete" asp-route-id="@obj.Guid" class="btn btn-danger"> <i class="bi bi-trash-fill"></i></a>
                    </div>
                </td>
            </tr>
        }

    </tbod>
</table>
